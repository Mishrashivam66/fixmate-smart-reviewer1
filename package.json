{
  "name": "fixmate-smart-reviewer",
  "displayName": "FixMate Smart Reviewer",
  "description": "AI-powered code review and fixing assistant",
  "version": "0.0.13",
  "publisher": "shivamkumar7899",

  "engines": {
    "vscode": "^1.80.0"
  },

  "categories": ["Other"],

  "activationEvents": [
    "onCommand:fixmate.reviewProject"
  ],

  "main": "./extension.js",

  "contributes": {
    "commands": [
      {
        "command": "fixmate.reviewProject",
        "title": "FixMate: Review Project"
      }
    ],
    "configuration": {
      "title": "FixMate",
      "properties": {
        "fixmate.apiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key for FixMate"
        }
      }
    }
  },

  "files": [
    "dist",
    "extension.js",
    "package.json",
    "README.md"
  ],

  "scripts": {
    "build": "esbuild agent.mjs --bundle --platform=node --format=esm --outfile=dist/agent.js"
  },

  "devDependencies": {
    "esbuild": "^0.27.2",
    "@google/genai": "^1.34.0",
    "dotenv": "^17.2.3"
  }
}
